{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "declaration": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
